<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/logoSmall"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_raymi_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienvenido, Administrador"
        android:textColor="@color/text_main"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/logoSmall"
        app:layout_constraintTop_toTopOf="@id/logoSmall"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Cards: clientes, vestuarios, alquileres -->
    <LinearLayout
        android:id="@+id/llCards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logoSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/card_bg"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvClientesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clientes"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvClientesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_main"
                android:textSize="28sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/card_bg"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvVestuariosLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vestuarios"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvVestuariosCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_main"
                android:textSize="28sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/card_bg">

            <TextView
                android:id="@+id/tvAlquileresLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alquileres"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvAlquileresCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_main"
                android:textSize="28sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Placeholder para gráfico o lista -->
    <TextView
        android:id="@+id/tvPlaceholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gráfico: Alquileres por departamento (próximamente)"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/llCards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
