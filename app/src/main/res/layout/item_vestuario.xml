<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvNombreVestuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles de Vestuario"
            android:textStyle="bold"
            android:textColor="@color/text_main"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvDanzaVestuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danza: Huayno"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvDepartamentoVestuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departamento: Cusco"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/btnEliminarVestuario"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:tint="@color/red"
            android:contentDescription="Eliminar vestuario"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
