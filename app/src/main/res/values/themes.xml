<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal de la app RAYMI -->
    <style name="Theme.RAYMI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>

        <!-- Fondo y texto -->
        <item name="android:colorBackground">@color/bg</item>
        <item name="android:textColor">@color/text_main</item>

        <!-- Botones, campos, etc -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/bg</item>
    </style>
</resources>
